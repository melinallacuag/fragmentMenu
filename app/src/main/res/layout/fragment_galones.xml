<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalonesFragment">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:text="GALONES"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cerrarventana"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_cerrarventana" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Galones:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputgalones"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:inputType="number"
            android:hint="Ingresar Galones"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="N° Placa:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputplaca"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar N° Placa"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Kilometraje:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputkilometro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Kilometraje"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="180dp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>