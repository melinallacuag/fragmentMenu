<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolesFragment">

    <LinearLayout
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOLES"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_black"
            android:textColor="#071C65"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Monto:"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputdato"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:inputType="number"
            android:hint="Ingresar Monto"
            android:paddingLeft="20sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="N° Placa:"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputplaca"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar N° Placa"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp"   />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Kilometraje:"
            android:textColor="#071C65"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputkilometro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Kilometraje"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp"   />

        <Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="180dp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:text="Agregar"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>