                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/icon_fidelizacionn" />

                    <TextView
                        android:id="@+id/txtFidelizacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fidelización"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAnular"
                android:layout_width="1dp"
                android:layout_height="150sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:layout_marginBottom="20sp"
                android:clickable="true"
                android:foreground="@drawable/activitycard"
                app:cardBackgroundColor="#FBDFA1"
                app:cardCornerRadius="15dp"
                app:cardElevation="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/icon_cancelar" />

                    <TextView
                        android:id="@+id/txtAnular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anular"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardConsultarComp"
                android:layout_width="1dp"
                android:layout_height="150sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:layout_marginBottom="20sp"
                android:clickable="true"
                android:foreground="@drawable/activitycard"
                app:cardBackgroundColor="#E5ECB6"
                app:cardCornerRadius="15dp"
                app:cardElevation="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/icon_consulta" />

                    <TextView
                        android:id="@+id/txtConsultarComp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consultar Comprobante"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCara"
                android:layout_width="1dp"
                android:layout_height="150sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:layout_marginBottom="50sp"
                android:clickable="true"
                android:foreground="@drawable/activitycard"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="15dp"
                app:cardElevation="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/icon_cara" />

                    <TextView
                        android:id="@+id/txtCara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cara"
                        android:textAlignment="center"
                        android:textColor="#54565A"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardShop"
                android:layout_width="1dp"
                android:layout_height="150sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:layout_marginBottom="50sp"
                android:clickable="true"
                android:foreground="@drawable/activitycard"
                app:cardBackgroundColor="#CDDFF2"
                app:cardCornerRadius="15dp"
                app:cardElevation="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/icon_shoptienda" />

                    <TextView
                        android:id="@+id/txtShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tienda"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

