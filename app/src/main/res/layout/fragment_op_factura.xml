<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpFacturaFragment">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FACTURACIÓN"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="ID Cliente:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputdato"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar ID Cliente"
            android:inputType="number"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="N° RUC:"
            android:textSize="16sp"
            android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/inputplaca"
            android:layout_width="260dp"
            android:layout_height="50sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar N° RUC"

            android:inputType="number"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="SUNAT"
            android:layout_marginStart="10sp"

            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="N° Tarjeta:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputkilometro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar N° Tarjeta"
            android:inputType="number"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Razon Social"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputrazonsocial"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Razon Social"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Dirección"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inpudireccion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Dirección"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Razon Social"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputobservacion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Observación"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="#3C4048"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btntipopago"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Tipo de pago"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>