<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoPagoFragment">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIPO DE PAGO"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_black"
            android:textColor="#071C65"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Forma de Pago:"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/radioEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Efectivo"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#123456"
                android:textColorHint="#404143"
                android:textSize="14sp"/>
            <RadioButton
                android:id="@+id/radioTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Tarjeta"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#123456"
                android:textColorHint="#404143"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Monto Soles:"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold"  />

        <EditText
            android:id="@+id/inputmontosoles"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Monto Soles"
            android:inputType="number"
            android:paddingLeft="20sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp" />


   />

        <Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="180dp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Agregar"
            android:fontFamily="@font/nunito_extrabold"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>