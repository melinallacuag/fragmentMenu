<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".TiendaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="783dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cat_hamburguesa"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40sp"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/cat_licores"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roudimage" />

                <TextView
                    android:id="@+id/texthamburguesa"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#CCD9D9D9"
                    android:padding="15sp"
                    android:text="HAMBURGUESA"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/cat_hamburguesa"
                    app:layout_constraintEnd_toEndOf="@+id/cat_hamburguesa"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="@+id/cat_hamburguesa"
                    app:layout_constraintTop_toTopOf="@+id/cat_hamburguesa" />


            </LinearLayout>



        </GridLayout>

    </ScrollView>







    </androidx.constraintlayout.widget.ConstraintLayout>

